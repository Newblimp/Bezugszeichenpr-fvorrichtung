{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Tests",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}/build",
        "--target",
        "unit_tests",
        "--config",
        "Debug",
        "--",
        "-j",
        "8"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "Build All",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}/build",
        "--config",
        "Debug",
        "--",
        "-j",
        "8"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "Configure CMake",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-B",
        "${workspaceFolder}/build",
        "-DCMAKE_BUILD_TYPE=Debug",
        "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "Run All Tests",
      "type": "shell",
      "command": "${workspaceFolder}/build/tests/unit_tests",
      "windows": {
        "command": "${workspaceFolder}/build/tests/Debug/unit_tests.exe"
      },
      "args": [
        "--gtest_color=yes"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "dependsOn": ["Build Tests"]
    },
    {
      "label": "Run Tests with Output",
      "type": "shell",
      "command": "${workspaceFolder}/build/tests/unit_tests",
      "windows": {
        "command": "${workspaceFolder}/build/tests/Debug/unit_tests.exe"
      },
      "args": [
        "--gtest_color=yes",
        "--gtest_print_time=1"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": [],
      "dependsOn": ["Build Tests"]
    },
    {
      "label": "Clean Build",
      "type": "shell",
      "command": "rm",
      "linux": {
        "command": "rm",
        "args": ["-rf", "${workspaceFolder}/build"]
      },
      "windows": {
        "command": "rmdir",
        "args": ["/s", "/q", "${workspaceFolder}\\build"]
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
